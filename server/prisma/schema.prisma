generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id            Int             @id @default(autoincrement())
  email         String          @unique
  password      String
  roleId        Int
  conversations Conversations[]
  messages      Messages[]
  role          Roles           @relation(fields: [roleId], references: [id])
}

model Roles {
  id    Int     @id @default(autoincrement())
  name  String
  Users Users[]
}

model Messages {
  id             Int           @id @default(autoincrement())
  message        String
  userId         Int
  fromUser       Boolean
  conversationId Int
  conversation   Conversations @relation(fields: [conversationId], references: [id])
  user           Users         @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([conversationId])
}

model Conversations {
  id       Int        @id @default(autoincrement())
  title    String
  userId   Int
  user     Users      @relation(fields: [userId], references: [id])
  messages Messages[]
}
